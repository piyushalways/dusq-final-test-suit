#include <dt-bindings/regulator/npm1300.h>



&i2c21 {
	status = "okay";
};


&npm1300_ek_pmic {
	host-int-gpios = <&gpio1 6 0>;
	pmic-int-pin = <1>;
};

&npm1300_ek_gpio {
	status = "okay";
};


&npm1300_ek_charger {
			compatible = "nordic,npm1300-charger";
			term-microvolt = <4200000>; 
			term-warm-microvolt = <4000000>;
			current-microamp = <150000>;
			dischg-limit-microamp = <1000000>;
			vbus-limit-microamp = <500000>;
			/* Disable battery NTC */
	        thermistor-ohms = <10000>;
			thermistor-beta = <3380>;
			charging-enable;
		};


		/* Turn ON nPM1300 BUCK1 and BUCK2 on the EK */

&npm1300_ek_buck1 {
	/* Set to your required rail; example: 1.8 V */
	regulator-min-microvolt = <3000000>;
	regulator-max-microvolt = <3000000>;

	/* Make sure itâ€™s on at boot (and kept on) */
	regulator-boot-on;
	regulator-always-on;
	/* Enable forced PWM mode */
	regulator-allowed-modes = <NPM1300_BUCK_MODE_PWM>;
	regulator-initial-mode = <NPM1300_BUCK_MODE_PWM>;
	status = "okay";
};

&npm1300_ek_buck2 {
	/* Set to your required rail; example: 3.3 V */
	regulator-min-microvolt = <2200000>;
	regulator-max-microvolt = <2200000>;

	/* Make sure it's on at boot (and kept on) */
	regulator-boot-on;
	regulator-always-on;
	/* Enable forced PWM mode */
	regulator-allowed-modes = <NPM1300_BUCK_MODE_PWM>;
	regulator-initial-mode = <NPM1300_BUCK_MODE_PWM>;
	status = "okay";
};

/* Configure LDO1 in Load Switch mode */
&npm1300_ek_ldo1 {
	regulator-allowed-modes = <NPM1300_LDSW_MODE_LDSW>;
	regulator-initial-mode = <NPM1300_LDSW_MODE_LDSW>;
	regulator-boot-on;
	status = "okay";
};

/* Configure LDO2 in Load Switch mode */
&npm1300_ek_ldo2 {
	regulator-allowed-modes = <NPM1300_LDSW_MODE_LDSW>;
	regulator-initial-mode = <NPM1300_LDSW_MODE_LDSW>;
	regulator-boot-on;
	status = "okay";
};

